<div class="container col-md-6 mt-3 mb-3 card bg-light">
   <form action="/student/edit/{{ student._id }}" method="post">
      <h1 class="text text-danger text-center text-uppercase mt-3">Edit</h1>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Name</label>
         <input class="form-control" type="text" name="name" value={{ product.name }} required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Price</label>
         <input class="form-control" type="text" name="price" value={{ product.price }} required>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Category</label>
         <select class="form-control" name="category">
            <option value="Bear Brick">Bear Brick</option>
            <option value="Animu Figures">Animu Figures</option>
            <option value="Collectible Cars">Collectible Cars</option>
            <option value="Legos">Legos</option>
         </select>
      </div>
      <div class="form-group mt-3">
         <label class="h5 text text-success" for="">Image</label><br>
         <img src="/images/{{ product.image }}" width="100" height="100">
         <input class="form-control" type="file" name="image" value={{ product.image }} required>
      </div>
      <div class="form-group mt-3">
   <label class="h5 text text-success" for="">Stock</label>
   {{#ifEquals stock 0}}
      <p class="text-danger">Out of stock</p>
   {{else}}
      <input class="form-control" type="number" name="stock" value="{{ product.stock }}" required min="0">
   {{/ifEquals}}
</div>
      <div class="form-group text-center mt-3 mb-3">
         <input class="btn btn-primary" type="submit" value="Edit">
      </div>
   </form>
</div>
